---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import axios from 'axios';

// GitHub username
const username = 'krishanthisera';

// GitHub API endpoint for fetching user's Gists
const GISTS_API_ENDPOINT = `https://api.github.com/users/${username}/gists`;

// Function to fetch user's Gists
async function fetchGists(): Promise<any[]> {
  try {
    const response = await axios.get(GISTS_API_ENDPOINT);
    return response.data;
  } catch (error) {
    console.error(`Failed to fetch Gists: ${error}`);
    return [];
  }
}


export async function getStaticPaths({ paginate }) {
  const snippets = await getCollection("snippets");
  snippets.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  return paginate(snippets, { pageSize: 10 });
}

const { page } = Astro.props;
---

<BaseLayout title="</> Snippets" sideBarActiveItemID="snippets">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">&lt/&gt Snippets</div>
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">Sorry!</p>
        <p>There are no snippets to show at the moment. Check back later!</p>
      </div>
    ) : (
      <ul>
        {page.data.map((snippet) => (
          <>
            <HorizontalCard
              title={snippet.data.title}
              img={snippet.data.heroImage}
              desc={snippet.data.description}
              url={"/snippets/" + snippet.slug}
              target="_self"
              badge={snippet.data.badge}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          {" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Recent snippets
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Older Snippets{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            {" "}
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
