---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Repmgr Haproxy Daemon"
    img="https://bizkt.imgix.net/projects/golang.png"
    desc="Go-Lang Daemon to track Postgres switch-overs"
    url="https://github.com/krishanthisera/harepd"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Istio Certmanager POC"
    img="https://bizkt.imgix.net/projects/istio.png"
    desc="POC implementation of Istio with Certmanager"
    url="https://github.com/krishanthisera/istio-certman-poc"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="How to host a static website in AWS using Terraform"
    img="https://bizkt.imgix.net/projects/terraform.png"
    desc="This repository contains a sample infrastructure as code (IaC) using Terraform to host a static website/blog. The primary use case of this setup is to host a static website using the Astro framework, though this is applicable for any static site."
    url="https://github.com/krishanthisera/aws-static-hosting"
  />
</BaseLayout>
