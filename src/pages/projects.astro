---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Repmgr Haproxy Daemon"
    img="https://bizkt.imgix.net/projects/golang.png"
    desc="Go-Lang Daemon to track Postgres switch-overs"
    url="https://github.com/krishanthisera/harepd"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Istio Certmanager POC"
    img="https://bizkt.imgix.net/projects/istio.png"
    desc="POC implementation of Istio with Certmanager"
    url="https://github.com/krishanthisera/istio-certman-poc"
  />
</BaseLayout>
